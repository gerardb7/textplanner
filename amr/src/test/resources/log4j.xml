<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="debug_file" fileName="textplanning.log" append="true">
            <ThresholdFilter level="INFO" onMatch="DENY" onMismatch="ACCEPT"/>
            <PatternLayout pattern="%m%n"/>
        </File>
        <File name="stats_file" fileName="stats.log" append="true">
            <ThresholdFilter level="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%m%n"/>
        </File>
        <Console name="console" target="SYSTEM_OUT">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d [%p] %c{1} â€“ %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
        </Root>
        <logger name="edu.upf.taln.textplanning">
            <AppenderRef ref="debug_file"/>
            <AppenderRef ref="stats_file"/>
            <AppenderRef ref="console"/>
        </logger>
    </Loggers>
</Configuration>