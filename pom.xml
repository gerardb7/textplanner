			<groupId>it.uniroma1.lcl.babelnet</groupId>
			<artifactId>babelnet-api</artifactId>
			<version>3.7</version>
		</dependency>
		<dependency>
			<groupId>cc.mallet</groupId>
			<artifactId>mallet</artifactId>
